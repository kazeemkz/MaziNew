@model eLibrary.Model.Exam

@{
    ViewBag.Title = "Edit";
}

<h4>EDIT EXAM</h4>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Exam</legend>

        @Html.HiddenFor(model => model.ExamID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ExamCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExamCode)
            @Html.ValidationMessageFor(model => model.ExamCode)
        </div>

        <div class="editor-label">
          <b>Class:</b>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.LevelName, eLibrary.Model.LevelDictionary.LevelDicoListWithStaff)
            @Html.ValidationMessageFor(model => model.LevelName)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.Duration)
        </div>
        <div class="editor-field">
          @Html.EditorFor(model => model.Duration)
            @Html.ValidationMessageFor(model => model.Duration)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Term)
        </div>
        <div class="editor-field">
          @Html.DropDownListFor(model => model.Term, eLibrary.Model.LevelDictionary.Term)
            @Html.ValidationMessageFor(model => model.Term)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Visible)
        </div>
        <div class="editor-field">
          @Html.DropDownListFor(model => model.Visible, eLibrary.Model.LevelDictionary.Visible)
            @Html.ValidationMessageFor(model => model.Visible)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
