@model eLibrary.Model.Course

@{
    
    Layout = null;
}

@*<script src="~/Scripts/jquery-1.6.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>*@
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("Create", "Course"))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create New Subject</legend>

        <div class="editor-label">
            <b> <text>Level</text></b>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.LevelStringID, eLibrary.Model.LevelDictionary.LevelDicoList)
            @Html.ValidationMessageFor(model => model.LevelStringID)
        </div>

        <div class="editor-label">
           @* @Html.LabelFor(model => model.Name)*@ <b> <text>Subject Name</text></b>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

