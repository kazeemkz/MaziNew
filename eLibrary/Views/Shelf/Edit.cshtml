@model eLibrary.Model.Shelf

@{
    ViewBag.Title = "Edit";
}

<h4>EDIT SHELF</h4>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Shelf</legend>

        @Html.HiddenFor(model => model.ShelfID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ShelfName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ShelfName)
            @Html.ValidationMessageFor(model => model.ShelfName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
