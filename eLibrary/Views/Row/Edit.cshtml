@model eLibrary.Model.Row

@{
    ViewBag.Title = "Edit";
}

<h4>EDIT ROW</h4>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Row</legend>

        @Html.HiddenFor(model => model.RowID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ShelfID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ShelfID)
            @Html.ValidationMessageFor(model => model.ShelfID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RowName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RowName)
            @Html.ValidationMessageFor(model => model.RowName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
